#lang racket

(define (square x) (* x x))

(define *op-table* (make-weak-hash))

(define (put op type proc)
  (hash-set! *op-table* (list op type) proc))
(define (get op type)
  (hash-ref *op-table* (list op type) #f))

(define (put-super type super-type)
  (put 'super type super-type)))

(define (get-super type)
  (get 'super type))

